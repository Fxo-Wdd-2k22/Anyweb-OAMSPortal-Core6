    <script type="text/javascript">



        function OnBegin() {
            $('#btnRegister').html(`<i class='fa fa-spinner fa-spin'></i> Processing`);
        }

        function OnRegisterSuccess(res) {
            
            if (res.response == 'Success') {
                
                window.location.href = '/Home/Welcome';
            }
            else {
                
                $('.form-message').html(res.message);
                $('#btnRegister').html(`Create Account`);
            }
        }

        function OnLoginBegin() {
            $('#btnLogin').html(`<i class='fa fa-spinner fa-spin'></i> Processing`);
        }

        function OnLoginSuccess(res) {
            if (res.response == 'Success') {
                window.location.href = '/Home/Welcome';
            }
            else {
                $('.form-message').html(res.message);
                $('#btnLogin').html(`Login`);
            }
        }
    </script>
